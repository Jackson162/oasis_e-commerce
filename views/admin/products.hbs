<div class="row">
  <h1>Products Page</h1>
  <h4><a href="/admin/users">Users Page</a></h4>
</div>
<div class="row"  style="justify-content: center;">
  <div class="col-md-12">
        <div class="row">
            {{#each products}}
            <div class="col-md-3">
              <div class="card mb-4 shadow-sm" style="height: 430px;">
                <img class="bd-placeholder-img card-img-top" width="100%" height="225" src={{this.image}}></img>
                <div class="card-body">
                  <p class="card-text">
                    <h4><a href="/admin/products/{{this.id}}">{{this.id}} {{this.name}}</a></h4>
                    <span>{{this.description}}</span>
                  </p>
                  <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">$ {{this.price}}</small>
                  </div>
                </div>
              </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>